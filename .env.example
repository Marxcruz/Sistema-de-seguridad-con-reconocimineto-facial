# =============================================================================
# CONFIGURACIÓN CONSOLIDADA DEL SISTEMA DE RECONOCIMIENTO FACIAL
# =============================================================================
# Copia este archivo como .env y configura los valores según tu entorno

# =============================================================================
# BASE DE DATOS
# =============================================================================
DATABASE_URL="postgresql://postgres:password@localhost:5432/sistema_seguridad_facial"

# =============================================================================
# SEGURIDAD Y AUTENTICACIÓN
# =============================================================================
# IMPORTANTE: Genera claves seguras para producción usando:
# node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
JWT_SECRET="a1b2c3d4e5f6789012345678901234567890abcdef1234567890abcdef123456789012345678901234567890abcdef12"
NEXTAUTH_SECRET="b2c3d4e5f6789012345678901234567890abcdef1234567890abcdef123456789012345678901234567890abcdef123"
ENCRYPTION_KEY="fernet_key_will_be_generated_automatically_by_python_service"

# =============================================================================
# CONFIGURACIÓN DE RECONOCIMIENTO FACIAL
# =============================================================================
# Umbrales de seguridad (valores optimizados para producción)
CONFIDENCE_THRESHOLD=0.85
LIVENESS_THRESHOLD=0.3
TF_LIVENESS_THRESHOLD=0.05
ANTI_SPOOFING_ENABLED=true

# Configuración de TensorFlow
ENABLE_TENSORFLOW=true
TF_MODELS_DIR="face_recognition_service/models"

# Configuración de imágenes
MAX_IMAGE_SIZE=5242880  # 5MB
UPLOAD_DIR="./uploads"
MAX_FILE_SIZE="10485760"  # 10MB

# =============================================================================
# CONFIGURACIÓN DE SERVICIOS
# =============================================================================
# URLs de servicios (puertos estandarizados)
PYTHON_API_URL="http://localhost:8000"
FACE_RECOGNITION_API_URL="http://localhost:8000"
FACE_RECOGNITION_API_KEY="secure_api_key_change_in_production"
NEXTAUTH_URL="http://localhost:3000"

# =============================================================================
# NOTIFICACIONES
# =============================================================================
# Configuración SMTP (Gmail)
SMTP_HOST="smtp.gmail.com"
SMTP_PORT="587"
SMTP_USER="your-email@gmail.com"
SMTP_PASS="your-app-password"

# Configuración Telegram
TELEGRAM_BOT_TOKEN="your-telegram-bot-token"
TELEGRAM_CHAT_ID="your-chat-id"

# =============================================================================
# CONFIGURACIÓN DE DESARROLLO
# =============================================================================
NODE_ENV="development"
LOG_LEVEL="debug"

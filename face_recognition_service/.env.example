# Configuración optimizada para reconocimiento facial
# Copia este archivo como .env y ajusta los valores según necesites

# Base de datos
DATABASE_URL=postgresql://postgres:1234@localhost:5432/sistema_seguridad_facial

# Umbrales de reconocimiento - CONFIGURACIÓN SEGURA PARA PRODUCCIÓN
CONFIDENCE_THRESHOLD=0.85
LIVENESS_THRESHOLD=0.3
TF_LIVENESS_THRESHOLD=0.05

# Configuración de TensorFlow
ENABLE_TENSORFLOW=true

# Tamaño máximo de imagen (5MB)
MAX_IMAGE_SIZE=5242880

# Clave de encriptación (generar nueva para producción)
# ENCRYPTION_KEY=tu_clave_aqui
